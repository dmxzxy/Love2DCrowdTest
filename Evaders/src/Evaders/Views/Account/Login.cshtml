@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<h2>@ViewData["Title"].</h2>

<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <h4>Use your account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Username" class="col-md-3 control-label"></label>
                    <div class="col-md-6">
                        <input asp-for="Username" class="form-control" placeholder="Username"/>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="col-md-3 control-label"></label>
                    <div class="col-md-6">
                        <input asp-for="Password" class="form-control" placeholder="Password"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <!--
                todo remember me
                
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <div class="checkbox">
                            <input asp-for="RememberMe" type="checkbox" />
                            <label asp-for="RememberMe">Remember me?</label>
                        </div>
                    </div>
                </div>

                    -->
                <hr/>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">Log in</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-4">
        <section>
            <h4>Log in order to play.</h4>
            <hr/>

            <div>
                <p>
                    <b>No account?</b>
                </p>
                <p>
                    If you do not have an account already you can register for free <a asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">here</a>.
                </p>
                <p>
                    <b>Forgot your password?</b>
                </p>
                <p>
                    Well you are fucked. No forgot password here.
                </p>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}